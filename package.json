{
  "name": "discrete-cleanup",
  "version": "1.0.0",
  "description": "This is the discrete layers cleanup job",
  "main": "./src/cleanup_script.js",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "test:unit": "jest --coverage --testPathPattern=\"./tests/unit/.*.spec.js\" --reporters='default' --reporters='jest-html-reporters' --watchAll=false",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint \"src/**/*\"",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run lint && npm run test:unit",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json  && npm run assets:copy",
    "start": "node ./src/cleanup_script.js"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@map-colonies/mc-logger": "^1.2.1",
    "aws-sdk": "^2.858.0",
    "axios": "^0.21.1",
    "config": "^3.3.3",
    "js-yaml": "^3.14.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^10.0.0",
    "@map-colonies/eslint-config": "^2.1.0",
    "commitlint": "^9.1.2",
    "copyfiles": "^2.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-jest": "^24.1.7",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-create-mock-instance": "^1.1.0",
    "jest-html-reporters": "^2.0.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.0.0"
  }
}
